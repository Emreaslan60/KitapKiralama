@using WebUygulamaProje1.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
    <title>@ViewData["Title"] -  Kitap Kiralama</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebUygulamaProje1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body style="background-color:bisque">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-success border-bottom box-shadow mb-3   ">
            <div class="container-fluid ">
                <i class="fa-solid fa-book m-2 fs-3"></i>

                <a class="navbar-brand  text-black fs-3 fst-italic"  asp-area="" asp-controller="Home" asp-action="Index">Askar Kiralama</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link text-black " asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                        </li>

                        @if (User.IsInRole(UserRoles.Role_Admin))  //yetkilendirmek için koşul yazdık
                        {
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="KitapTuru" asp-action="Index">Kitap Türü</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="Kitap" asp-action="Index">Kitap İşlemleri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="Kiralama" asp-action="Index">Kiralama İşlemi</a>
                            </li>


                        }


                        @if (User.IsInRole(UserRoles.Role_Ogretmen))
                        {

                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="Kiralama" asp-action="Index">Kiralama İşlemi</a>
                            </li>

                            
                        }
                        @if (User.IsInRole(UserRoles.Role_Ogrenci))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-black" asp-area="" asp-controller="Kitap" asp-action="Index">Kitap Listesi</a>
                            </li>

                        }

                    </ul>

                    <partial name="_LoginPartial">
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
