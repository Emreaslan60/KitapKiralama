@model List<Kiralama>

@if (TempData["basarili"] != null)
{
    <h2 style="color:green">@TempData["basarili"]</h2>
}
@if (TempData["Sil"] != null)
{
    <h2 style="color:red">@TempData["Sil"]</h2>
}

@if (TempData["Guncelle"] != null)
{
    <h2 style="color:dodgerblue">@TempData["Guncelle"]</h2>
}
@* yukarıda kodlarda mesaj kutuları oluşturduk yaptıkları işlemlere göre mesajları gönderdik ve renklerini ona göre ayarladık *@


<div class="container">
    <div class="row pt-3 pb-4"> 
        <div>
            <h1>Kitap Kiralama</h1>
        </div>
    </div>
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>OgrenciId</th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kiralama in Model)
            {
                <tr>
                    
                    <td>@kiralama.OgrenciId</td>
                     <td>@kiralama.Kitap.KitapAdi</td>
                 
                    <td>
                        <a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@kiralama.Id" class="btn btn-success" style="width:150px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" class="btn btn-danger" style="width:150px">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">Yeni Kiralama kaydı Oluştur</a>
        </div>
    </div>
</div>
