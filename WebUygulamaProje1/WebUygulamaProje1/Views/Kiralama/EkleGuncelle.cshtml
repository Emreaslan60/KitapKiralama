@model Kiralama

<form method="post" enctype="multipart/form-data">
  
 
    <div class="row">
     
            <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-3">

                    <h2 class="text-primary ">@(Model == null ? " Yeni Kiralama " : "Kiralama Güncelle") Kitap</h2>  @*Modelden gelen kitap ıd sıfırsa kitap ekleyecek çünkü ortada kitap yok o yuüzden ıd 0
                    ama eğer tersi bie durum varsa ıd si var olan bir kitap vardır o zaman var olan kitaba güncelleme işlemi yapılacaktır.
                    *@

                    <hr />
                </div>


                <div class="mb-3">
                    <label asp-for="OgrenciId" class="p-0"> </label>
                <input asp-for="OgrenciId" class="form-control" />
                <span asp-validation-for="OgrenciId" class="text-danger"></span> @* kitap alanı boş bırakılamaz uyarısı verdirdik *@
                </div>


                <div class="mb-3">
                    <label asp-for="KitapId" class="p-0"> </label>
                <Select asp-for="KitapId" asp-items="ViewBag.KitapTuruList"  class="form-select"> </Select>
                    <span asp-validation-for="KitapId" class="text-danger"></span> @* ıd alanı boş bırakılamaz uyarısı verdirdik *@
                </div>

           
               
              

                @if (Model != null)
                {
                    <button type="submit" class="btn btn-success align=" center " valign="middle" btn-lg " style="width:200px"> Güncelle</button>
                }
                else
                {
                    <button type="submit" class="btn btn-success btn-lg align=" center " valign="middle" " style="width:200px"> Kitap Kirala</button>
                }


                <a asp-action="Index" asp-controller="Kiralama" class="btn btn-danger btn-lg" style="width:250px"> Kiralamalara geri dön</a>

           

            </div>

        </div>

        <div class="col-2">
            @if (Model != null)  //model boş gelmezse kitabı göster
            {

                <br />
                <img src="@Model.Kitap.ResimUrl" width="100%"
                     style="border-radius:7px; border:1px solid gray" />

            }
        </div>

     </div>
   
</form>