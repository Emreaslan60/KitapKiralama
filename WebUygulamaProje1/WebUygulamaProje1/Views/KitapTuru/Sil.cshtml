@model KitapTuru


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary ">Kitap Güncelle</h2>

            <hr />
        </div>


        <div class="mb-3">
            <label asp-for="Ad" class="p-0"> </label>
            <input asp-for="Ad"  disabled class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span> @* kitap alanı boş bırakılamaz uyasrısı verdirdik *@
        </div>

        <button type="submit" class="btn btn-success btn-lg" style="width:250px"> Kitap Türü Sil</button>
        <a asp-action="Index" asp-controller="KitapTuru" class="btn btn-danger btn-lg" style="width:250px"> Kitap Türlerine geri dön</a>

    </div>
</form>
