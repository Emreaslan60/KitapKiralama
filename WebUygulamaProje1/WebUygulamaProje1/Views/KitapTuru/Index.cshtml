@using System.Drawing
@model List<KitapTuru>

@if (TempData["basarili"] != null)
{
    <h2 style="color:green">@TempData["basarili"]</h2>
}
@if (TempData["Sil"] != null)
{
    <h2 style="color:red">@TempData["Sil"]</h2>
}

@if (TempData["Guncelle"] != null)
{
    <h2 style="color:dodgerblue">@TempData["Guncelle"]</h2>
}
@* yukarıda kodlarda mesaj kutuları oluşturduk yaptıkları işlemlere göre mesajları gönderdik ve renklerini ona göre ayarladık *@


<div class="container">
    <div class="row pt-3 pb-4"> 
        <div>
            <h1>Kitap Türleri</h1>
        </div>
    </div>
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kitap Türü</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kitapTuru in Model)
            {
                <tr>
                   
                    <td>@kitapTuru.Id</td>
                    <td>@kitapTuru.Ad</td>
                    <td>
                        <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id" class="btn btn-success" style="width:150px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" class="btn btn-danger" style="width:150px">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">Yeni Kitap Oluştur</a>
        </div>
    </div>
</div>
