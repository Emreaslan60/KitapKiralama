@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row align-items-center">
    <div >
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
           
            <div class="form-floating mb-3 w-75">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 w-75">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 w-75">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 w-75">
                <input asp-for="Input.Ogrencino" class="form-control"  aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Ogrencino">Ogrencino</label>
                <span asp-validation-for="Input.Ogrencino" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 w-75">
                <input asp-for="Input.Adres" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.Adres">Adres</label>
                <span asp-validation-for="Input.Adres" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 w-75">
                <input asp-for="Input.Fakulte" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.Fakulte">Fakulte</label>
                <span asp-validation-for="Input.Fakulte" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 w-75">
                <input asp-for="Input.Bolum" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.Bolum">Bolum</label>
                <span asp-validation-for="Input.Bolum" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div>
        <section>
         
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                      
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
